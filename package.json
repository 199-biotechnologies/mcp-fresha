{
  "name": "@fresha/mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Fresha Data Connector via Snowflake",
  "main": "dist/index.js",
  "bin": {
    "fresha-mcp": "./dist/cli/index.js"
  },
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/199-biotechnologies/mcp-fresha.git"
  },
  "homepage": "https://github.com/199-biotechnologies/mcp-fresha",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": ["mcp", "fresha", "snowflake", "model-context-protocol"],
  "author": "199-biotechnologies",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "snowflake-sdk": "^1.14.0",
    "dotenv": "^16.4.7",
    "zod": "^3.23.8",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/snowflake-sdk": "^1.6.24",
    "typescript": "^5.7.3",
    "ts-node-dev": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.6"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}